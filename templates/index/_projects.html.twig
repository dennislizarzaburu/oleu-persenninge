{% if projects is defined and projects %}
    <div class="bg-white text-deep-sea py-12" id="unsere-projekte" x-data="{ project: '{{ projects.0.id }}' }">
        <div class="container">
            <h2 class="text-h2 font-bold mb-9 md:mb-18 md:text-center">
                Unsere Projekte
            </h2>

            <div class="mb-9 md:mb-18 overflow-x-scroll">
                <ul class="space-x-5 flex flex-row flex-nowrap text-goldenrod text-sm">
                    {% for project in projects %}
                        <li>
                            <span
                                    @click="project = '{{ project.id }}'"
                                    :class="project == '{{ project.id }}' ? 'font-bold' : ''"
                                    class="cursor-pointer"
                                >
                                {{ project.title }}
                            </span>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            {% for project in projects %}
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5 md:gap-6" x-show="project == '{{ project.id }}'">

                    {% for projectImage in project.images %}
                        {% if loop.index <= 6 %}
                            <div class="rounded-2xl overflow-hidden aspect-square">
                                <img src="{{ vich_uploader_asset(projectImage, 'imageFile') }}" class="w-full h-full object-cover" alt="" />
                            </div>
                        {% endif %}
                        {% if loop.index == 6 %}
                            Mehr anzeigen
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}